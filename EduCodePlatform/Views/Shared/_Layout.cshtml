<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduCodePlatform</title>

    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EduCodePlatform.styles.css" asp-append-version="true" />

    <style>
        /* Базовий шрифт */
        body {
            font-family: 'Open Sans', sans-serif;
            transition: background-color 0.3s ease, color 0.3s ease;
            margin: 0;
            padding: 0;
        }

        /* Анімація плавної появи контенту */
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        /* Sidebar (бічна панель) */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            padding: 1rem;
            overflow-y: auto;
            z-index: 100;
            background-color: #343a40;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
        }

            .sidebar .nav-link {
                color: #adb5bd;
                margin-bottom: 0.5rem;
                border-radius: 0.25rem;
                transition: background-color 0.2s, color 0.2s;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    color: #fff;
                    background-color: rgba(255, 255, 255, 0.1);
                }

        /* Основний контент з відступом під sidebar */
        main {
            margin-left: 250px;
            padding: 2rem;
        }

        /* Navbar з градієнтом */
        .navbar {
            background: linear-gradient(to right, #343a40, #23272b);
            border-bottom: none;
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        /* Темний режим */
        .dark-mode {
            background-color: #121212; /* Загальний темний фон для body */
            color: #f1f1f1; /* Світлий текст */
        }
            /* У темному режимі стилі елементів */
            .dark-mode .navbar {
                background: #2c2c2c;
            }

            .dark-mode .sidebar {
                background-color: #2c2c2c;
            }

                .dark-mode .sidebar .nav-link {
                    color: #cfcfcf;
                }

                    .dark-mode .sidebar .nav-link:hover,
                    .dark-mode .sidebar .nav-link.active {
                        background-color: rgba(255, 255, 255, 0.15);
                    }
    </style>
</head>
<body class="fade-in">
    <header>
        <!-- Верхній navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EduCodePlatform</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar"
                        aria-controls="topNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="topNavbar">
                    <!-- Праворуч кнопка для темного режиму -->
                    <button id="toggleTheme" class="btn btn-outline-light ms-auto">Dark Mode</button>
                </div>
            </div>
        </nav>
    </header>

    <!-- Ліве меню (Sidebar) -->
    <nav id="sidebarMenu" class="sidebar d-none d-md-block">
        <div class="position-sticky">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">
                        <span data-feather="home"></span> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="CodeSubmissions" asp-action="Index">
                        <span data-feather="code"></span> Code Submissions
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="EditorSettings" asp-action="Index">
                        <span data-feather="settings"></span> Editor Settings
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="ProgrammingLanguages" asp-action="Index">
                        <span data-feather="layers"></span> Programming Languages
                    </a>
                </li>
            </ul>
            <hr class="text-secondary" />
        </div>
    </nav>

    <!-- Основний контент -->
    <main>
        <div class="container-fluid">
            <div class="pb-2 mb-3 border-bottom">
                <h1 class="h2">@ViewData["Title"]</h1>
            </div>
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <script>
        feather.replace();

        // Перемикання темного режиму за допомогою одного класу "dark-mode"
        const body = document.body;
        const toggleBtn = document.getElementById('toggleTheme');

        toggleBtn.addEventListener('click', function () {
            body.classList.toggle('dark-mode');
            // Змінюємо текст кнопки відповідно до стану
            this.textContent = body.classList.contains('dark-mode') ? 'Light Mode' : 'Dark Mode';
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
