@model EduCodePlatform.Models.EditorSetting

@{
    ViewData["Title"] = "Редагувати Editor Setting";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="EditorSettingId" />

    <div class="form-group">
        <label asp-for="UserId"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Theme"></label>
        <select asp-for="Theme" class="form-control">
            <option value="">-- Виберіть тему --</option>
            <option value="dark" selected="@(Model.Theme == "dark")">Dark</option>
            <option value="light" selected="@(Model.Theme == "light")">Light</option>
        </select>
        <span asp-validation-for="Theme" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TabSize"></label>
        <input asp-for="TabSize" class="form-control" />
        <span asp-validation-for="TabSize" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-2">Зберегти зміни</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
