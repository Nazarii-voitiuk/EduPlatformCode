@model EduCodePlatform.Models.EditorSetting

@{
    ViewData["Title"] = "Видалити Editor Setting";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    Ви впевнені, що хочете видалити ці налаштування?
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.EditorSettingId</dd>

            <dt class="col-sm-3">UserId</dt>
            <dd class="col-sm-9">@Model.UserId</dd>

            <dt class="col-sm-3">Theme</dt>
            <dd class="col-sm-9">@Model.Theme</dd>
        </dl>
    </div>
</div>

<!-- ВАЖЛИВО: asp-action="Delete" (бо метод позначений [ActionName("Delete")]) -->
<form asp-action="Delete" method="post" class="mt-3">
    <!-- Тут назва поля має бути "id", бо в методі DeleteConfirmed(int id) -->
    <input type="hidden" name="id" value="@Model.EditorSettingId" />

    <button type="submit" class="btn btn-danger">Видалити</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>
