@model EduCodePlatform.Models.ProgrammingLanguage

@{
    ViewData["Title"] = "Деталі мови програмування";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.LanguageId</dd>

            <dt class="col-sm-3">Назва</dt>
            <dd class="col-sm-9">@Model.Name</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.LanguageId" class="btn btn-warning">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</div>
