@{
    ViewData["Title"] = "Додати мову програмування";
}

<h2>@ViewData["Title"]</h2>

<!-- Форма надсилає лише поле Name -->
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Назва мови</label>
        <input type="text" name="Name" class="form-control" />
        <!-- Відображення помилки, якщо в ModelState є ключ "Name" -->
        <span class="text-danger">@Html.ValidationMessage("Name")</span>
    </div>
    <button type="submit" class="btn btn-success mt-2">Зберегти</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
