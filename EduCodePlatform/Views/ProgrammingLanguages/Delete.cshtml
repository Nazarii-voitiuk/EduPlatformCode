@model EduCodePlatform.Models.ProgrammingLanguage

@{
    ViewData["Title"] = "Видалити мову програмування";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    Ви впевнені, що хочете видалити цю мову?
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.LanguageId</dd>

            <dt class="col-sm-3">Назва</dt>
            <dd class="col-sm-9">@Model.Name</dd>
        </dl>
    </div>
</div>

<!-- Використовуємо ActionName("Delete") у контролері -->
<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.LanguageId" />
    <button type="submit" class="btn btn-danger">Видалити</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>
