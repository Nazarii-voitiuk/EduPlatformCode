@{
    ViewData["Title"] = "Code Submissions";
}

<h2>Code Submissions</h2>

<button class="btn btn-primary mb-3" data-toggle="modal" data-target="#codeModal" onclick="openCreateModal()">Create New Submission</button>

<table class="table table-bordered" id="codeTable">
    <thead>
        <tr>
            <th>Submission ID</th>
            <th>UserId</th>
            <th>Language</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
            <th style="width:220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loaded by AJAX -->
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="codeModal" tabindex="-1" role="dialog" aria-labelledby="codeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <!-- modal-lg для більшого вікна -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="codeModalLabel">Create/Edit Submission</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="closeModal()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="SubmissionId" />

                    <div class="form-group">
                        <label for="UserId">UserId</label>
                        <input type="text" id="UserId" class="form-control" />
                        <!-- або зробити select для вибору юзера, якщо треба -->
                    </div>

                    <div class="form-group">
                        <label for="LanguageId">Language</label>
                        <select id="LanguageId" class="form-control">
                            <!-- Заповнюватимемо AJAX-ом зі списку ProgrammingLanguage -->
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="CodeText">Code Text</label>
                        <textarea id="CodeText" class="form-control" rows="10"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="closeModal()">Close</button>
                <button type="button" class="btn btn-primary" id="saveBtn" onclick="saveSubmission()">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/codeSubmissions.js"></script>
}
